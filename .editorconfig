# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
# Disable function naming rule for Composable functions (PascalCase is correct)
ktlint_function_naming_ignore_when_annotated_with = Composable
# Allow backing properties with underscore prefix
ktlint_standard_property-naming = disabled
# Allow comments in value argument lists
ktlint_standard_comment-wrapping = disabled

[*.{xml,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
